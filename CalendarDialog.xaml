<Window x:Class="BankSystem.CalendarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="Календарь" Height="255" Width="210" ResizeMode="NoResize">
    <Grid>
        <Calendar x:Name="WorkingCalendar" HorizontalAlignment="Center" 
                  Margin="10" VerticalAlignment="Top"/>
        <Button Content="Ok" HorizontalAlignment="Center" 
                Margin="60,182,60,0" VerticalAlignment="Top" 
                Width="80" Height="30" Click="Button_Click"/>
    </Grid>
</Window>
